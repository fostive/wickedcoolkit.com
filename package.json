{
  "name": "wickedcoolkit.com",
  "description": "A fun, nostalgic web toolkit built on Heroku and Salesforce.",
  "version": "1.0.0",
  "bugs": {
    "url": "https://github.com/andyet/wickedcoolkit.com/issues"
  },
  "dependencies": {
    "cssnano": "^4.1.10",
    "express": "^4.17.1",
    "express-force-https": "^1.0.0",
    "hbs": "^4.1.1",
    "if-env": "^1.0.4",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "wicked-coolkit": "^1.0.0"
  },
  "devDependencies": {
    "prettier": "^2.2.1"
  },
  "homepage": "https://github.com/andyet/wickedcoolkit.com#readme",
  "keywords": [],
  "license": "ISC",
  "main": "index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andyet/wickedcoolkit.com.git"
  },
  "scripts": {
    "build": "if-env NODE_ENV=production && npm run minify || true",
    "clean": "rm -rf public/resources/*.min.css",
    "minify": "npm run clean; for file in public/resources/*.css; do cat $file | postcss > ${file%.*}.min.css; done",
    "prettier": "prettier --write \"**/*.{css,html,js,json,md}\"",
    "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md}\"",
    "start": "node server.js"
  }
}
